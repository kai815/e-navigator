<%= render "layouts/header" %>
<h1>ユーザー一覧</h1>
<table class = "table table-bordered table-hover">
  <thead>
    <tr>
      <th>名前</th>
      <th>Email</th>
      <th>年齢</th>
      <th>性別</th>
      <th>学校名</th>
      <th>面接日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <% if user.id != current_user.id %>
      <tr>
      <td>
        <div class="text-center">
          <%= user.name %>
        </div>
      </td>
      <td>
        <div class="text-center">
          <%= user.email %>
        </div>
      </td>
      <td>
        <div class="text-center">
          <%= user.age %>
        </div>
      </td>
      <td>
        <div class="text-center">
          <%= user.gender_i18n %>
        </div>
      </td>
      <td>
        <div class="text-center">
          <%= user.school_name %>
        </div>
      </td>
      <td>
        <div class="text-center">
          <% if user.interviews.approved.present? %>
            <%= user.interviews.approved[0].start_time.strftime("%Y年%m月%d日 %H時%M分") %>
          <% end %>
        </div>
      </td>
      <td>
        <div class="text-center">
          <%= link_to "面接日程一覧", user_interviews_path(user.id), class:"btn interview_date_btn" %>
        </div>
      </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
